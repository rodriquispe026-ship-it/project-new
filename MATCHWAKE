<script>
let racha = 0;

function setAlarm(){
    const time = document.getElementById("time").value;
    document.getElementById("alarmStatus").innerText = 
        "Alarma fijada para: " + time;
}

function sumarRacha(){
    racha++;
    document.getElementById("racha").innerText = 
        "Racha actual: " + racha + " d√≠as";
}

function guardarAmigo(){
    const nombre = document.getElementById("amigo").value;
    document.getElementById("amigoNombre").innerText = 
        "Amigo guardado: " + nombre;
}

let n1, n2;

function generarProblema(){
    n1 = Math.floor(Math.random()*10);
    n2 = Math.floor(Math.random()*10);
    document.getElementById("problema").innerText = 
        "¬øCu√°nto es " + n1 + " + " + n2 + "?";
}

function verificar(){
    const r = parseInt(document.getElementById("respuesta").value);
    if(r === n1+n2){
        document.getElementById("resultado").innerText = "Correcto. Alarma desactivada.";
    } else {
        document.getElementById("resultado").innerText = "Incorrecto, intenta otra vez.";
    }
}
</script>

